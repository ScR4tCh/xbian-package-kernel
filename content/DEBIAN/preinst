#!/bin/bash

KVER="3.10.9+"
fpool="/boot/System.map-$KVER /boot/kernel.img-$KVER"

if [ $1 == "install" -o $1 == "upgrade" ]; then

	mountpoint -q /boot || { mount /boot || exit 1; }

	for f in $fpool; do
		{ [ -f $f ] && mv $f $f.xbian; } || true
	done

        [ -d /lib/modules/$KVER ] && mv /lib/modules/$KVER /lib/modules/$KVER.xbian || true
fi
